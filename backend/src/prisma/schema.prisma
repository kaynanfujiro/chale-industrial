generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Aluguel {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  imageP      String
  images      String[]
  video       String
  value       Int
  type        String
  Reservas    Reservas[]
}

model Reservas {
  id        Int      @id @default(autoincrement())
  name      String
  number    String
  email     String
  startDate DateTime @db.Timestamp(6)
  endDate   DateTime @db.Timestamp(6)
  status    Status   @default(PENDING)
  createdAt DateTime @default(now()) @db.Timestamp(6)
  aluguelId Int
  Aluguel   Aluguel  @relation(fields: [aluguelId], references: [id])
}

model UserAdmin {
  id       Int    @id @default(autoincrement())
  username     String
  password String
  email    String @unique
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}
